                            <th>車號：</th>
                            <td colspan="2"><input type="text" id="CAR_NO" size="30" style="width: 268px;" value='@((Model != null) ? @Model.PCAR_NO : "")'></input></td>
                        </tr>
                        <tr>
                            <th>機號：</th>
                            <td><input type="text" id="PMAC_NO" size="10" style="width: 247px;" value='@((Model != null) ? @Model.MAC_NO:"")'></input></td>
                            <th>申請日期：</th>
