@using PagedList.Mvc;
@model OrixMvc.ViewModels.WE020VO
@{
    Layout = null;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    @Styles.Render("~/Content/content")
    @Styles.Render("~/Content/easyui")
    @Scripts.Render("~/bundles/jquery-1.7.1")
    @Scripts.Render("~/bundles/easyui")
